<UserControl x:Class="HeBianGu.General.WpfControlLib.SampleMessageDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HeBianGu.General.WpfControlLib"
             mc:Ignorable="d" Background="{DynamicResource S.Brush.TextBackground.Defaut}"
             d:DesignHeight="300" d:DesignWidth="300"
             Width="400" Height="200">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="Message" Foreground="{DynamicResource S.Brush.TextForeground.Defaut}" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   TextTrimming="CharacterEllipsis" ToolTip="{Binding ElementName=Message,Path=Text}"
                   FontSize="18" Grid.Row="0"/>
        <local:FButton Grid.Row="1" Style="{DynamicResource S.FButton.Style.Defaut}"
                IsDefault="True"  Command="{x:Static local:DialogHost.CloseDialogCommand}"
                HorizontalAlignment="Center" VerticalAlignment="Center">
            确定
        </local:FButton>
    </Grid>
</UserControl>
