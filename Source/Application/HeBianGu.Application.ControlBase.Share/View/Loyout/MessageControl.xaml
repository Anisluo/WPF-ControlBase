<UserControl x:Class="HeBianGu.Applications.ControlBase.LinkWindow.View.Loyout.MessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.Applications.ControlBase.LinkWindow.View.Loyout"
             xmlns:wpfcontrollib="clr-namespace:HeBianGu.General.WpfControlLib;assembly=HeBianGu.General.WpfControlLib"
             mc:Ignorable="d" 
             d:DesignHeight="1450" d:DesignWidth="1800">
    <StackPanel>
        <StackPanel.Resources>
            <Style TargetType="{x:Type wpfcontrollib:FButton}" BasedOn="{StaticResource S.FButton.Style.Default}">
                <Setter Property="Width" Value="300"/>
                <Setter Property="Height" Value="80"/>
                <Setter Property="FontSize" Value="30"/>

            </Style>
        </StackPanel.Resources>
        <GroupBox Header="消息对话框样式">
            <UniformGrid Columns="5" Height="400">
                <wpfcontrollib:FButton Margin="5" Content="确定消息"  Command="{Binding RelayCommand}" CommandParameter="Button.ShowDialogMessage"/>
                <wpfcontrollib:FButton Margin="5" Content="确定取消消息" Command="{Binding RelayCommand}" CommandParameter="Button.ShowResultMessge"/>
                <wpfcontrollib:FButton Margin="5" Content="字符串进度提示" Command="{Binding RelayCommand}" CommandParameter="Button.ShowStringProgress"/>
                <wpfcontrollib:FButton Margin="5" Content="百分比进度提示" Command="{Binding RelayCommand}" CommandParameter="Button.ShowPercentProgress"/>
                <wpfcontrollib:FButton Margin="5" Content="等待消息" Command="{Binding RelayCommand}" CommandParameter="Button.ShowWaittingMessge"/>
                <wpfcontrollib:FButton Margin="5" Content="提示消息" Command="{Binding RelayCommand}" CommandParameter="Button.ShowSnackMessage"/>
                <wpfcontrollib:FButton Margin="5" Content="气泡消息"  Command="{Binding RelayCommand}" CommandParameter="Button.ShowNotifyMessage"/>
            </UniformGrid>
        </GroupBox>
        <GroupBox Header="消息窗口">
            <UniformGrid Columns="5" Height="400">
                <wpfcontrollib:FButton Margin="5" Content="提示消息"  Command="{Binding RelayCommand}" CommandParameter="Button.ShowWindowSumitMessage"/>
                <wpfcontrollib:FButton Margin="5" Content="对话消息"  Command="{Binding RelayCommand}" CommandParameter="Button.ShowWindowResultMessage"/>
                <wpfcontrollib:FButton Margin="5" Content="自定义消息"  Command="{Binding RelayCommand}" CommandParameter="Button.ShowWindowIndentifyMessage"/> 
            </UniformGrid>
        </GroupBox>
    </StackPanel>
</UserControl>
