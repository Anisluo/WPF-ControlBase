<UserControl x:Class="HeBianGu.Applications.ControlBase.LinkWindow.View.Loyout.XamlControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.Applications.ControlBase.LinkWindow.View.Loyout"
             xmlns:wpfcontrollib="clr-namespace:HeBianGu.General.WpfControlLib;assembly=HeBianGu.General.WpfControlLib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox x:Name="tb" TextWrapping="Wrap">
            <![CDATA[
            <wpfcontrollib:FButton Grid.Row="1" Content="我是根据手动输入的Xaml生成的按钮" Width="500"  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:wpfcontrollib="clr-namespace:HeBianGu.General.WpfControlLib;assembly=HeBianGu.General.WpfControlLib"/>
           ]]>
        </TextBox>

        <wpfcontrollib:FButton Grid.Row="1" Content="生成控件" Click="FButton_Click" HorizontalAlignment="Right" Margin="20,0"/>

        <TextBlock Foreground="Red" Text="请输入Xaml代码，再点击生成控件" Grid.Row="1" VerticalAlignment="Center" FontSize="16" HorizontalAlignment="Left" Margin="20,0"/>

        <Border x:Name="boder" Grid.Row="2" Background="White"/>
    </Grid>
</UserControl>
