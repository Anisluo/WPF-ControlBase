<UserControl x:Class="HeBianGu.Applications.ControlBase.LinkWindow.View.Loyout.BrushControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.Applications.ControlBase.LinkWindow.View.Loyout"
             xmlns:h="QQ:908293466"
             mc:Ignorable="d" 
             d:DesignHeight="1450" d:DesignWidth="1800">
    <ScrollViewer>
        <ScrollViewer.Resources>
            <Style TargetType="{x:Type h:FButton}" BasedOn="{StaticResource S.FButton.Style.Default}">
                <Setter Property="Width" Value="250"/>
                <Setter Property="Margin" Value="5"/>
            </Style>
        </ScrollViewer.Resources>
        <StackPanel>
            <StackPanel.Resources>
                <Style TargetType="GroupBox">
                    <Setter Property="Background" Value="Transparent"/>
                </Style>
            </StackPanel.Resources>
            <StackPanel.Background>
                <LinearGradientBrush>
                    <GradientStop Color="Red" Offset="0"/>
                    <GradientStop Color="{DynamicResource AccentColor}" Offset="1"/>
                </LinearGradientBrush>
            </StackPanel.Background>
            <GroupBox Header="主题颜色" Background="Transparent">
                <UniformGrid Columns="4">
               
                    <h:FButton Background="{DynamicResource S.Brush.Accent}" Content="S.Brush.Accent"/>
                    <h:FButton Background="{DynamicResource S.Brush.Accent.MouseOver}" Content="S.Brush.Accent.MouseOver"/>
                    <h:FButton Background="{DynamicResource S.Brush.Accent.Opacity.9}" Content="S.Brush.Accent.Opacity.9"/>
                    <h:FButton Background="{DynamicResource S.Brush.Accent.Opacity.8}" Content="S.Brush.Accent.Opacity.8"/>
                    <h:FButton Background="{DynamicResource S.Brush.Accent.Opacity.7}" Content="S.Brush.Accent.Opacity.7"/>
                    <h:FButton Background="{DynamicResource S.Brush.Accent.Opacity.6}" Content="S.Brush.Accent.Opacity.6"/>
                    <h:FButton Background="{DynamicResource S.Brush.Accent.Opacity.5}" Content="S.Brush.Accent.Opacity.5"/>
                    <h:FButton Background="{DynamicResource S.Brush.Accent.Opacity.4}" Content="S.Brush.Accent.Opacity.4"/>
                    <h:FButton Background="{DynamicResource S.Brush.Accent.Opacity.3}" Content="S.Brush.Accent.Opacity.3"/>
                    <h:FButton Background="{DynamicResource S.Brush.Accent.Opacity.2}" Content="S.Brush.Accent.Opacity.2"/>
                    <h:FButton Background="{DynamicResource S.Brush.Accent.Opacity.1}" Content="S.Brush.Accent.Opacity.1"/>  
                </UniformGrid>
            </GroupBox>

            <GroupBox Header="文本颜色">
                <UniformGrid Columns="4">
                    <h:FButton Background="{DynamicResource S.Brush.TextForeground.Tiltle}" Content="S.Brush.TextForeground.Tiltle"/>
                    <h:FButton Background="{DynamicResource S.Brush.TextForeground.Default}" Content="S.Brush.TextForeground.Default"/>
                    <h:FButton Background="{DynamicResource S.Brush.TextForeground.Assist}" Content="S.Brush.TextForeground.Assist"/>

                    <h:FButton Background="{DynamicResource S.Brush.TextForeground.Link}" Content="S.Brush.TextForeground.Link"/>
                    <h:FButton Background="{DynamicResource S.Brush.TextBackground.Default}" Content="S.Brush.TextBackground.Default" Foreground="{DynamicResource S.Brush.TextForeground.Tiltle}"/>
                    <h:FButton Background="{DynamicResource S.Brush.TextBorderBrush.Default}" Content="S.Brush.TextBorderBrush.Default"/>
                    <h:FButton Background="{DynamicResource S.Brush.RowIndex.BackGround}" Foreground="{DynamicResource S.Brush.TextForeground.Tiltle}" Content="S.Brush.RowIndex.BackGround"/> 
                </UniformGrid>
            </GroupBox>


            <GroupBox Header="标注颜色">
                <UniformGrid Columns="4">
                    <h:FButton Background="{DynamicResource S.Brush.Red.Notice}" Content="S.Brush.Red.Notice"/>
                    <h:FButton Background="{DynamicResource S.Brush.Red.Notice.Opactiy.8}" Content="S.Brush.Red.Notice.Opactiy.8"/>
                    <h:FButton Background="{DynamicResource S.Brush.Red.Notice.Opactiy.6}" Content="S.Brush.Red.Notice.Opactiy.6"/>
                    <h:FButton Background="{DynamicResource S.Brush.Red.Notice.Opactiy.4}" Content="S.Brush.Red.Notice.Opactiy.4"/>
                    <h:FButton Background="{DynamicResource S.Brush.Red.Notice.Opactiy.2}" Content="S.Brush.Red.Notice.Opactiy.2"/>

                    <h:FButton Background="{DynamicResource S.Brush.Green.Notice}" Content="S.Brush.Green.Notice"/>

                    <h:FButton Background="{DynamicResource S.Brush.LightGray.Notice}" Foreground="{DynamicResource S.Brush.TextForeground.Tiltle}" Content="S.Brush.LightGray.Notice"/>
                    <h:FButton Background="{DynamicResource S.Brush.LightGray.NoticeOpacity.5}" Foreground="{DynamicResource S.Brush.TextForeground.Tiltle}" Content="S.Brush.LightGray.NoticeOpacity.5"/>
                    <h:FButton Background="{DynamicResource S.Brush.Gray.Notice}" Content="S.Brush.Gray.Notice" Foreground="{DynamicResource S.Brush.TextForeground.Tiltle}"/>
                    <h:FButton Background="{DynamicResource S.Brush.Gray.Notice.Opacity.5}" Content="S.Brush.Gray.Notice.Opacity.5" Foreground="{DynamicResource S.Brush.TextForeground.Tiltle}"/>
                    <h:FButton Background="{DynamicResource S.Brush.Orange.Notice}" Content="S.Brush.Orange.Notice"/>
                    <h:FButton Background="{DynamicResource S.Brush.Black.Notice}" Content="S.Brush.Black.Notice"/>


                    <h:FButton Background="{DynamicResource S.Brush.White.Notice}" Foreground="{DynamicResource S.Brush.TextForeground.Tiltle}" Content="S.Brush.White.Notice"/>
                    <h:FButton Background="{DynamicResource S.Brush.White.Opactiy.8}" Foreground="{DynamicResource S.Brush.TextForeground.Tiltle}" Content="S.Brush.White.Opactiy.8"/>
                    <h:FButton Background="{DynamicResource S.Brush.White.Opactiy.6}" Foreground="{DynamicResource S.Brush.TextForeground.Tiltle}" Content="S.Brush.White.Opactiy.6"/>
                    <h:FButton Background="{DynamicResource S.Brush.White.Opactiy.4}" Foreground="{DynamicResource S.Brush.TextForeground.Tiltle}" Content="S.Brush.White.Opactiy.4"/>
                    <h:FButton Background="{DynamicResource S.Brush.White.Opactiy.2}" Foreground="{DynamicResource S.Brush.TextForeground.Tiltle}" Content="S.Brush.White.Opactiy.2"/>


                    <h:FButton Background="{DynamicResource S.Brush.Dark.10}" Content="S.Brush.Dark.10"/>
                    <h:FButton Background="{DynamicResource S.Brush.Dark.9}" Content="S.Brush.Dark.9"/>
                    <h:FButton Background="{DynamicResource S.Brush.Dark.8}" Content="S.Brush.Dark.8"/>
                    <h:FButton Background="{DynamicResource S.Brush.Dark.7}" Content="S.Brush.Dark.7"/>
                    <h:FButton Background="{DynamicResource S.Brush.Dark.6}" Content="S.Brush.Dark.6"/>
                    <h:FButton Background="{DynamicResource S.Brush.Dark.5}" Content="S.Brush.Dark.5"/>
                    <h:FButton Background="{DynamicResource S.Brush.Dark.4}" Content="S.Brush.Dark.4"/>
                    <h:FButton Background="{DynamicResource S.Brush.Dark.3}" Content="S.Brush.Dark.3"/>
                    <h:FButton Background="{DynamicResource S.Brush.Dark.5}" Content="S.Brush.Dark.2"/>
                    <h:FButton Background="{DynamicResource S.Brush.Dark.1}" Foreground="{DynamicResource S.Brush.TextForeground.Tiltle}" Content="S.Brush.Dark.1"/>
                    <h:FButton Background="{DynamicResource S.Brush.Dark.0}" Content="S.Brush.Dark.0"/>
                    
                </UniformGrid>
            </GroupBox>

            <GroupBox Header="其他颜色">
                <UniformGrid Columns="4">
                    <h:FButton Background="{DynamicResource S.Brush.WindowBackground}" Foreground="{DynamicResource S.Brush.TextForeground.Tiltle}" Content="S.Brush.WindowBackground"/>
                    <h:FButton Background="{DynamicResource S.Brush.Share.UnEnbled.Background}" Foreground="{DynamicResource S.Brush.TextForeground.Tiltle}" Content="S.Brush.Share.UnEnbled.Background"/>
                    <h:FButton Background="{DynamicResource S.Brush.Share.UnEnbled.Foreground}" Foreground="{DynamicResource S.Brush.TextForeground.Tiltle}" Content="S.Brush.Share.UnEnbled.Foreground"/>
                    <h:FButton Background="{DynamicResource S.Brush.RowIndex.BackGround}" Foreground="{DynamicResource S.Brush.TextForeground.Tiltle}" Content="S.Brush.RowIndex.BackGround"/>
                </UniformGrid>
            </GroupBox>

            <GroupBox Header="渐变颜色">
                <UniformGrid Columns="4">
                    <Rectangle Height="100">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0 0" EndPoint="0 1">
                                <GradientStop Color="Yellow" Offset="0" />
                                <GradientStop Color="Red" Offset="0.5" />
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle Height="100">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0 0" EndPoint="0 1">
                                <GradientStop Color="Yellow" Offset="0" />
                                <GradientStop Color="Red" Offset="0.5" />
                                <GradientStop Color="Green" Offset="1" />
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle Height="100">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0 0" EndPoint="0 1">
                                <GradientStop Color="Yellow" Offset="0" />
                                <GradientStop Color="Red" Offset="0.33" />
                                <GradientStop Color="Green" Offset="0.66" />
                                <GradientStop Color="Blue" Offset="1" />
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Rectangle Height="100">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0 0" EndPoint="0 1">
                                <GradientStop Color="Yellow" Offset="0" />
                                <GradientStop Color="Red" Offset="0.25" />
                                <GradientStop Color="Green" Offset="0.50" />
                                <GradientStop Color="Blue" Offset="0.75" />
                                <GradientStop Color="Purple" Offset="1" />
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                </UniformGrid>
            </GroupBox>


            <GroupBox Header="特殊画刷">
                <UniformGrid Columns="4">
                    <Rectangle Height="300">
                        <Rectangle.Fill>
                            <RadialGradientBrush>
                                <GradientStop Offset="0" Color="Red" />
                                <GradientStop Offset="0.4" Color="Red" />
                                <GradientStop Offset="1" Color="Transparent" />
                            </RadialGradientBrush>
                        </Rectangle.Fill>
                        
                        <Rectangle.OpacityMask>
                            <DrawingBrush TileMode="Tile" Viewport="0.1 0.1 0.1 0.1" ViewportUnits="RelativeToBoundingBox" >
                                <DrawingBrush.Drawing>
                                    <GeometryDrawing Brush="Black">
                                        <GeometryDrawing.Geometry>
                                            <EllipseGeometry RadiusX="10" RadiusY="10" />
                                        </GeometryDrawing.Geometry>
                                    </GeometryDrawing>
                                </DrawingBrush.Drawing>
                            </DrawingBrush>
                        </Rectangle.OpacityMask>
                    </Rectangle> 
                </UniformGrid>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
