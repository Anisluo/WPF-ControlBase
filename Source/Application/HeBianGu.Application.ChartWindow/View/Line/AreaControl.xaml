<UserControl x:Class="HeBianGu.Application.ChartWindow.View.Line.AreaControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.Application.ChartWindow.View.Line"
             mc:Ignorable="d" 
             xmlns:h="QQ:908293466"
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel>
        <GroupBox Header="静态曲线" Height="500">

            <h:Chart yAxis="0,250,500,750,1000,1250,1500" xAxis="1,2,3,4,5,6,7" Padding="100,50">

                <h:Grid Margin="{Binding RelativeSource={RelativeSource AncestorType=h:Chart},Path=Padding}" yAxis="{Binding RelativeSource={RelativeSource AncestorType=h:Chart},Path=yAxis}" 
                        xAxis="{Binding RelativeSource={RelativeSource AncestorType=h:Chart},Path=xAxis}"/>

                <h:xAxis Margin="{Binding RelativeSource={RelativeSource AncestorType=h:Chart},Path=Padding}" Data="{Binding RelativeSource={RelativeSource AncestorType=h:Chart},Path=xAxis}"/>

                <h:yAxis Margin="{Binding RelativeSource={RelativeSource AncestorType=h:Chart},Path=Padding}" Data="{Binding RelativeSource={RelativeSource AncestorType=h:Chart},Path=yAxis}"/>

                <h:AreaSeries Margin="{Binding RelativeSource={RelativeSource AncestorType=h:Chart},Path=Padding}" 
                              yAxis="{Binding RelativeSource={RelativeSource AncestorType=h:Chart},Path=yAxis}"
                              xAxis="{Binding RelativeSource={RelativeSource AncestorType=h:Chart},Path=xAxis}" Foreground="#c23531"
                              Data="820,932,901,934,1290,1330,1320"/>

                <h:AreaSeries Margin="{Binding RelativeSource={RelativeSource AncestorType=h:Chart},Path=Padding}" 
                              yAxis="{Binding RelativeSource={RelativeSource AncestorType=h:Chart},Path=yAxis}"
                              xAxis="{Binding RelativeSource={RelativeSource AncestorType=h:Chart},Path=xAxis}" Foreground="#2f4554"
                              Data="720,832,801,834,1190,1230,1120"/>

                <h:AreaSeries Margin="{Binding RelativeSource={RelativeSource AncestorType=h:Chart},Path=Padding}" 
                              yAxis="{Binding RelativeSource={RelativeSource AncestorType=h:Chart},Path=yAxis}"
                              xAxis="{Binding RelativeSource={RelativeSource AncestorType=h:Chart},Path=xAxis}" Foreground="#61a0a8"
                              Data="520,732,501,634,1090,1030,1020"/>

                <h:AreaSeries Margin="{Binding RelativeSource={RelativeSource AncestorType=h:Chart},Path=Padding}" 
                              yAxis="{Binding RelativeSource={RelativeSource AncestorType=h:Chart},Path=yAxis}"
                              xAxis="{Binding RelativeSource={RelativeSource AncestorType=h:Chart},Path=xAxis}" Foreground="#d48265"
                              Data="320,332,301,334,390,330,320"/>

            </h:Chart>

        </GroupBox>
    </StackPanel>
</UserControl>
