<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
       xmlns:wpfcontrollib="clr-namespace:HeBianGu.General.WpfControlLib;assembly=HeBianGu.General.WpfControlLib"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1200">
    <Grid>
        <GroupBox Header="分页表格">
            <wpfcontrollib:PagedDataGrid  DataSource="{Binding Collection,Mode=TwoWay}">
                <wpfcontrollib:PagedDataGrid.Columns>
                    <DataGridTextColumn Header="序号" Binding="{Binding Code}" Width="100" />
                    <DataGridTextColumn Header="学校" Binding="{Binding Name}" Width="*" />
                    <DataGridTextColumn Header="地址" Binding="{Binding ID}" Width="*" />
                    <DataGridTextColumn Header="父节点" Binding="{Binding ParentID}" Width="*" />
                </wpfcontrollib:PagedDataGrid.Columns>
            </wpfcontrollib:PagedDataGrid>
        </GroupBox>
    </Grid>
</Window>
