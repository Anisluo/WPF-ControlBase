<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--窗口阴影效果-->
    <DropShadowEffect x:Key="S.DropShadowEffect.Window" Color="{DynamicResource AccentColor}" 
                      BlurRadius="8" ShadowDepth="0" Direction="0" Opacity="0.7" />

    <!--主浅灰色色调-->
    <SolidColorBrush x:Key="S.Brush.LightGray.Notice" Color="#EEEEEE"/>
    <SolidColorBrush x:Key="S.Brush.LightGray.NoticeOpacity.5" Color="#EEEEEE" Opacity="0.5"/>

    <!--主深灰色色调-->
    <SolidColorBrush x:Key="S.Brush.Gray.Notice" Color="#BFBFBF"></SolidColorBrush>
    <SolidColorBrush x:Key=".Brush.Gray.Opacity.5" Color="#BFBFBF"  Opacity="0.5"></SolidColorBrush>

    <!--背景透明窗体色调-->
    <SolidColorBrush x:Key="S.Brush.Accent.Opacity.5" Color="#252526"/>

    <!--白色背景前景色调-->
    <SolidColorBrush x:Key="S.Brush.White.Notice" Color="#252526"/>

    <!--主色调-->
    <SolidColorBrush x:Key="S.Brush.Accent"  Color="{DynamicResource AccentColor}"/>

    <!--半透明的主色调 一般用于MouseOver-->
    <SolidColorBrush x:Key="S.Brush.Accent.MouseOver"  Color="{DynamicResource AccentColor}" Opacity="0.5"/>

    <!--光标聚焦颜色-->
    <SolidColorBrush x:Key="S.Brush.Orange.Notice" Color="DarkOrange"/>

    <!--黑色主色调 一般用于字体颜色-->
    <SolidColorBrush x:Key="S.Brush.TextForeground.Tiltle" Color="#433F3E"/>

    <!--红色主色调 一般用于警告异常-->
    <SolidColorBrush x:Key="S.Brush.Red.Notice" Color="#FF0000"/>

    <!--未用到-->
    <SolidColorBrush x:Key="S.Brush.Green.Notice" Color="#61D8A8"/>
</ResourceDictionary>