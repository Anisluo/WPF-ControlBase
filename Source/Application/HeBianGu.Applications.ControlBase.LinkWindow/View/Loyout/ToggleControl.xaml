<UserControl x:Class="HeBianGu.Applications.ControlBase.LinkWindow.View.Loyout.ToggleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.Applications.ControlBase.LinkWindow.View.Loyout"
             xmlns:wpfcontrollib="clr-namespace:HeBianGu.General.WpfControlLib;assembly=HeBianGu.General.WpfControlLib"
             xmlns:base="clr-namespace:HeBianGu.Base.WpfBase;assembly=HeBianGu.Base.WpfBase"
             mc:Ignorable="d" 
             d:DesignHeight="1450" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel>
            <GroupBox Header="复选按钮">
                <StackPanel HorizontalAlignment="Center">
                    <wpfcontrollib:FCheckBox  Margin="3">记住密码</wpfcontrollib:FCheckBox>
                    <wpfcontrollib:FCheckBox Margin="3" IsChecked="{x:Null}">其他</wpfcontrollib:FCheckBox>
                    <wpfcontrollib:FCheckBox Margin="3" IsEnabled="False">禁用</wpfcontrollib:FCheckBox>
                    <wpfcontrollib:FCheckBox Margin="3" IsEnabled="False" IsChecked="{x:Null}">禁用</wpfcontrollib:FCheckBox>
                    <wpfcontrollib:FCheckBox Margin="3" IsEnabled="False" IsChecked="True">禁用</wpfcontrollib:FCheckBox>
                    <wpfcontrollib:FCheckBox Margin="3" IsChecked="True" Width="100"
                                                     base:ControlAttachProperty.AllowsAnimation="{Binding IsChecked,RelativeSource={RelativeSource Self}}">旋转</wpfcontrollib:FCheckBox>

                </StackPanel>
            </GroupBox>

            <GroupBox Header="单选按钮">
                <StackPanel>
                    <RadioButton Margin="3" base:ControlAttachProperty.FIconSize="18" HorizontalAlignment="Center">十八</RadioButton>
                    <RadioButton Margin="3" base:ControlAttachProperty.FIconSize="18" HorizontalAlignment="Center" IsEnabled="False">禁用</RadioButton>
                    <!--<RadioButton Margin="3" IsChecked="True" base:ControlAttachProperty.AllowsAnimation="{Binding IsChecked,RelativeSource={RelativeSource Self}}">旋转</RadioButton>-->
                    <RadioButton Style="{StaticResource BoxRadioButton}" Margin="1" Width="100" IsChecked="True" GroupName="ss">星期一</RadioButton>
                    <RadioButton Style="{StaticResource BoxRadioButton}" Margin="1" Width="100" GroupName="ss">星期二</RadioButton>
                    <RadioButton Style="{StaticResource BoxRadioButton}" Margin="1" Width="100" GroupName="ss">星期三</RadioButton>
                    <RadioButton Style="{StaticResource BoxRadioButton}" Margin="1" Width="100" GroupName="ss">星期四</RadioButton>
                    <RadioButton Style="{StaticResource BoxRadioButton}" Margin="1" Width="100" GroupName="ss">星期五</RadioButton>
                    <RadioButton Style="{StaticResource BoxRadioButton}" Margin="1" Width="100" GroupName="ss">星期六</RadioButton>
                    <RadioButton Style="{StaticResource BoxRadioButton}" Margin="1" Width="100" GroupName="ss">星期日</RadioButton>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="状态按钮">
                <StackPanel>
                    <wpfcontrollib:BulletCheckBox />
                    <wpfcontrollib:BulletCheckBox Text="关闭" CheckedText="开启" IsChecked="True" />
                    <wpfcontrollib:SwitchToggleButton Content="" Margin="10" IsEnabled="False" />
                    <wpfcontrollib:SwitchToggleButton Content="" IsChecked="true" Margin="10" IsEnabled="False" />
                    <wpfcontrollib:SwitchToggleButton Content="" IsChecked="true" Margin="10" TextHorizontalAlignment="Right" />
                    <wpfcontrollib:SwitchToggleButton x:Name="ts" Content="" Margin="10" CornerRadius="100" />
                    <wpfcontrollib:SwitchToggleButton Content="" CornerRadius="2" BorderCornerRadius="3" />

                    <ToggleButton HorizontalAlignment="Center"
                                          base:ControlAttachProperty.FIconSize="40" Foreground="{DynamicResource S.Brush.Accent}"
                                          Style="{DynamicResource S.ToggleButton.BrushFIconChecked}"
                                          base:ControlAttachProperty.FIcon="&#xe6d2;"/>

                    <ToggleButton x:Name="toggle" IsChecked="True"
                                          Grid.Column="3"  base:ControlAttachProperty.FIconSize="40"
                                          Style="{DynamicResource S.ToggleButton.DoubleFIconChecked}"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
