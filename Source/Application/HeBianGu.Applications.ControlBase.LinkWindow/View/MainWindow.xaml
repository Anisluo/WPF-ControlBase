<wpfcontrollib:LinkWindowBase  x:Class="HeBianGu.Applications.ControlBase.LinkWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HeBianGu.Applications.ControlBase.LinkWindow"
        xmlns:wpfcontrollib="clr-namespace:HeBianGu.General.WpfControlLib;assembly=HeBianGu.General.WpfControlLib"
        xmlns:base="clr-namespace:HeBianGu.Base.WpfBase;assembly=HeBianGu.Base.WpfBase"
        mc:Ignorable="d"  Style="{StaticResource S.Window.Link.Defaut}" CurrentLink="{Binding CurrentLink,Mode=TwoWay}"
        Title="MainWindow"  Height="1200" Width="1600" >

    <wpfcontrollib:LinkWindowBase.Logo>
        <BitmapImage UriSource="../Resources/logo.png"/>
    </wpfcontrollib:LinkWindowBase.Logo>

    <wpfcontrollib:LinkWindowBase.TabLinks>

        <base:TabLink DisplayName="我的表格"  Logo="&#xe69f;" Source="/HeBianGu.Applications.ControlBase.LinkWindow;component/View/GridView/GridControl.xaml">
            <base:TabLink.LeftLink>
                <local:CustomLeftControl/>
            </base:TabLink.LeftLink>
            <base:TabLink.RightLink>
                <local:CustomRightControl/>
            </base:TabLink.RightLink>
            <base:TabLink.TopLink>
                <local:CustomTopControl/>
            </base:TabLink.TopLink>
            <base:TabLink.BottomLink>
                <local:CustomBottomControl/>
            </base:TabLink.BottomLink>
        </base:TabLink>

        <base:TabLink DisplayName="树形列表"  Logo="&#xe69f;" Source="/HeBianGu.Applications.ControlBase.LinkWindow;component/View/TreeListView/TreeListControl.xaml">
            <base:TabLink.LeftLink>
                <local:CustomLeftControl/>
            </base:TabLink.LeftLink>
            <base:TabLink.RightLink>
                <local:CustomRightControl/>
            </base:TabLink.RightLink>
            <base:TabLink.TopLink>
                <local:CustomTopControl/>
            </base:TabLink.TopLink>
            <base:TabLink.BottomLink>
                <local:CustomBottomControl/>
            </base:TabLink.BottomLink>
        </base:TabLink>

        <base:TabLink DisplayName="基础控件"  Logo="&#xe69f;" Source="/HeBianGu.Applications.ControlBase.LinkWindow;component/View/CustomView/CustomControl.xaml">
            <base:TabLink.LeftLink>
                <local:CustomLeftControl/>
            </base:TabLink.LeftLink>
            <base:TabLink.RightLink>
                <local:CustomRightControl/>
            </base:TabLink.RightLink>
            <base:TabLink.TopLink>
                <local:CustomTopControl/>
            </base:TabLink.TopLink>
            <base:TabLink.BottomLink>
                <local:CustomBottomControl/>
            </base:TabLink.BottomLink>
        </base:TabLink>

        <base:TabLink DisplayName="布局控件"  Logo="&#xe69f;" Source="/HeBianGu.Applications.ControlBase.LinkWindow;component/View/LoyoutView/MdiControl.xaml">
            <base:TabLink.LeftLink>
                <wpfcontrollib:LinkGroupExpander x:Name="selectloyout"
                                                 Command="{x:Static wpfcontrollib:DrawerHost.CloseDrawerCommand}"
                                                 CommandParameter="{x:Static Dock.Left}">
                    <base:LinkGroup DisplayName="基础布局" Logo="&#xe69f;">
                        <base:LinkGroup.Links>
                            <base:Link Source="/HeBianGu.Applications.ControlBase.LinkWindow;component/View/GridView/GridControl.xaml"  DisplayName="我的表格" Logo="&#xe69f;"/>
                            <base:Link Source="/HeBianGu.Applications.ControlBase.LinkWindow;component/View/TreeListView/TreeListControl.xaml" DisplayName="树形列表"  Logo="&#xe6a3;"/>
                            <base:Link Source="/HeBianGu.Applications.ControlBase.LinkWindow;component/View/CustomView/CustomControl.xaml" DisplayName="基础控件"  Logo="&#xe69e;"/>
                            <base:Link Source="/HeBianGu.Applications.ControlBase.LinkWindow;component/View/CustomView/CustomControl.xaml" DisplayName="图表视图"  Logo="&#xe64b;"/>
                            <base:Link Source="/HeBianGu.Applications.ControlBase.LinkWindow;component/View/LoyoutView/MdiControl.xaml" DisplayName="布局控件"  Logo="&#xe64b;"/>
                            <base:Link Source="/HeBianGu.Applications.ControlBase.LinkWindow;component/View/LoyoutView/MdiControl.xaml" DisplayName="布局控件"  Logo="&#xe64b;"/>
                            <base:Link Source="/HeBianGu.Applications.ControlBase.LinkWindow;component/View/LoyoutView/MdiControl.xaml" DisplayName="布局控件"  Logo="&#xe64b;"/>
                        </base:LinkGroup.Links>
                    </base:LinkGroup>
                    <base:LinkGroup DisplayName="复杂布局"  Logo="&#xe69f;">
                        <base:LinkGroup.Links>
                            <base:Link Source="/HeBianGu.Applications.ControlBase.LinkWindow;component/View/GridView/GridControl.xaml"
                           DisplayName="我的表格" Logo="&#xe69f;"/>
                            <base:Link Source="/HeBianGu.Applications.ControlBase.LinkWindow;component/View/TreeListView/TreeListControl.xaml" DisplayName="树形列表"  Logo="&#xe6a3;"/>
                            <base:Link Source="/HeBianGu.Applications.ControlBase.LinkWindow;component/View/CustomView/CustomControl.xaml" DisplayName="基础控件"  Logo="&#xe69e;"/>
                            <base:Link Source="/HeBianGu.Applications.ControlBase.LinkWindow;component/View/CustomView/CustomControl.xaml" DisplayName="图表视图"  Logo="&#xe64b;"/>
                            <base:Link Source="/HeBianGu.Applications.ControlBase.LinkWindow;component/View/LoyoutView/MdiControl.xaml" DisplayName="布局控件"  Logo="&#xe64b;"/>
                            <base:Link Source="/HeBianGu.Applications.ControlBase.LinkWindow;component/View/LoyoutView/MdiControl.xaml" DisplayName="布局控件"  Logo="&#xe64b;"/>
                            <base:Link Source="/HeBianGu.Applications.ControlBase.LinkWindow;component/View/LoyoutView/MdiControl.xaml" DisplayName="布局控件"  Logo="&#xe64b;"/>

                        </base:LinkGroup.Links>
                    </base:LinkGroup>
                </wpfcontrollib:LinkGroupExpander>
            </base:TabLink.LeftLink>
            <base:TabLink.RightLink>
                <local:CustomRightControl/>
            </base:TabLink.RightLink>
            <base:TabLink.TopLink>
                <local:CustomTopControl/>
            </base:TabLink.TopLink>
            <base:TabLink.BottomLink>
                <local:CustomBottomControl/>
            </base:TabLink.BottomLink>

            <base:TabLink.CenterLink>
                <local:CenterContainControl Link="{Binding ElementName=selectloyout,Path=SelectedLink,Mode=TwoWay}"/>
            </base:TabLink.CenterLink>
        </base:TabLink>

    </wpfcontrollib:LinkWindowBase.TabLinks>

    <wpfcontrollib:LinkWindowBase.SettingLinks>
        <base:LinkGroup>
            <base:LinkGroup.Links>
                <base:Link Source="/HeBianGu.Applications.ControlBase.LinkWindow;component/SettingControl.xaml" DisplayName="数据设置"  Logo="&#xe6af;"/>
            </base:LinkGroup.Links>
        </base:LinkGroup>
    </wpfcontrollib:LinkWindowBase.SettingLinks>


    <wpfcontrollib:LinkWindowBase.LeftDrawerContent>
        <StackPanel Margin="16">
            <TextBlock Margin="4" HorizontalAlignment="Center">LEFT FIELD</TextBlock>
            <Button Command="{x:Static wpfcontrollib:DrawerHost.CloseDrawerCommand}"
                        CommandParameter="{x:Static Dock.Left}"
                        Margin="4" HorizontalAlignment="Center"
                        Style="{DynamicResource MaterialDesignFlatButton}">
                CLOSE THIS
            </Button>
            <Button Command="{x:Static wpfcontrollib:DrawerHost.CloseDrawerCommand}"
                        Margin="4" HorizontalAlignment="Center"
                        Style="{DynamicResource MaterialDesignFlatButton}">
                CLOSE ALL
            </Button>

            <TextBlock Text="啦啦啦啦啦啦" FontSize="50"/>
        </StackPanel>
    </wpfcontrollib:LinkWindowBase.LeftDrawerContent>


</wpfcontrollib:LinkWindowBase>
