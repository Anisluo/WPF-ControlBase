<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:base="clr-namespace:HeBianGu.Base.WpfBase;assembly=HeBianGu.Base.WpfBase"
                    xmlns:local="clr-namespace:HeBianGu.General.WpfControlLib">

    <DataTemplate x:Key="D.LinkAction.Defaut"  DataType="base:LinkAction">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="60,0">
            <TextBlock Text="{Binding Logo}" FontSize="14"  Foreground="{DynamicResource S.Brush.TextForeground.Title}"
                                           HorizontalAlignment="Left" Margin="10,0"
                                           VerticalAlignment="Center" Style="{DynamicResource FIcon}"/>
            <TextBlock Text="{Binding DisplayName}" Foreground="{DynamicResource S.Brush.TextForeground.Title}"/>
        </StackPanel>
    </DataTemplate>

    <Style x:Key="S.LinkGrouExpander.ListBox.Base" TargetType="ListBox">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <Style x:Key="S.LinkGrouExpander.ListBoxItem.Defaut" TargetType="ListBoxItem">
        <Setter Property="Height" Value="35"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Grid>
                        <Border x:Name="border" Background="Transparent"/>
                        <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

                        <Border x:Name="left" HorizontalAlignment="Left" 
                                Visibility="Collapsed" 
                                Background="{DynamicResource  S.Brush.Accent}" 
                                Width="5"/>

                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource S.Brush.Accent.MouseOver}"/>
                        </Trigger>

                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource S.Brush.Dark.2}"/>
                            <Setter Property="Foreground" Value="{DynamicResource  S.Brush.Accent}"/>
                            <Setter TargetName="left" Property="Visibility" Value="Visible"/>
                            <Setter Property="FontWeight" Value="Bold"/>

                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>

    <DataTemplate x:Key="D.LinkActionGroup.Defaut" DataType="base:LinkActionGroup">
        <Grid>
            <local:FExpander Header="{Binding DisplayName}" 
                             base:ControlAttachProperty.FIconSize="16" 
                             base:ControlAttachProperty.FIconMargin="10,0,0,0"
                             IsExpanded="True" 
                             IconFont="{Binding Logo}" 
                             Hint="{Binding Links.Count}">
                <ListBox ItemsSource="{Binding Links}" 
                         SelectedItem="{Binding RelativeSource={RelativeSource AncestorType=local:LinkGroupExpander},Path=SelectedLink,Mode=TwoWay}" 
                         Style="{StaticResource S.LinkGrouExpander.ListBox.Base}"
                         ItemContainerStyle="{StaticResource S.LinkGrouExpander.ListBoxItem.Defaut}" 
                         ItemTemplate="{StaticResource D.LinkAction.Defaut}"
                         Background="Transparent" BorderThickness="0">
                </ListBox>
            </local:FExpander>
        </Grid>
    </DataTemplate>

    <Style TargetType="local:LinkGroupExpander" BasedOn="{StaticResource S.LinkGrouExpander.ListBox.Base}">
        <Setter Property="Background" Value="{DynamicResource S.Brush.TextBackgroud.Defaut}"/>
        <Setter Property="Foreground" Value="{DynamicResource S.Brush.TextForeground.Defaut}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="ItemTemplate" Value="{StaticResource D.LinkActionGroup.Defaut}"/>
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="ListBoxItem">
                    
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Grid>
                                    <Border x:Name="border" Background="Transparent"/>
                                    <ContentPresenter/>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="Transparent"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="Transparent"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter> 
                </Style>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
