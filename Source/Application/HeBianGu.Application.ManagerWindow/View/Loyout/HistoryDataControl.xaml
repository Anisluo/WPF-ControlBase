             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.Application.ManagerWindow.View.Loyout"
             mc:Ignorable="d" 
             xmlns:h="QQ:908293466"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Purple">

        <ToggleButton x:Name="tb_left"/>
        <TextBlock Text="HistoryDataControl" HorizontalAlignment="Center" Visibility="{Binding ElementName=tb_left,Path=IsChecked,Converter={x:Static h:XConverter.BooleanToVisibilityConverter}}" VerticalAlignment="Center" FontSize="100"/>
    </Grid>
</UserControl>
