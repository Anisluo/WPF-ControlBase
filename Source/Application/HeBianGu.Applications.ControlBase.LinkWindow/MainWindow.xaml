<wpfcontrollib:LinkWindow  x:Class="HeBianGu.Applications.ControlBase.LinkWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:wpfcontrollib="clr-namespace:HeBianGu.General.WpfControlLib;assembly=HeBianGu.General.WpfControlLib"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HeBianGu.Applications.ControlBase.LinkWindow"
       xmlns:base="clr-namespace:HeBianGu.Base.WpfBase;assembly=HeBianGu.Base.WpfBase"
        mc:Ignorable="d"  Style="{StaticResource S.Window.Link.Defaut}" 
        Title="MainWindow" Height="760" Width="1600">

    <wpfcontrollib:LinkWindow.CaptionBackground>
        <ImageBrush ImageSource="Resources/top背景.png" />
    </wpfcontrollib:LinkWindow.CaptionBackground>


    <wpfcontrollib:LinkWindow.Logo>
        <BitmapImage UriSource="Resources/bilibili.png"/>
    </wpfcontrollib:LinkWindow.Logo>

    <wpfcontrollib:LinkWindow.TabLinks>
        <base:Link Source="/HeBianGu.Applications.ControlBase.LinkWindow;component/GridControl.xaml" DisplayName="我的表格" Logo="&#xe69f;"/>
        <base:Link Source="/HeBianGu.Applications.ControlBase.LinkWindow;component/ButtonControl.xaml" DisplayName="我的按钮"  Logo="&#xe69e;"/>
        <base:Link Source="/HeBianGu.Applications.ControlBase.LinkWindow;component/TreeListControl.xaml" DisplayName="树形列表"  Logo="&#xe6a3;"/>
    </wpfcontrollib:LinkWindow.TabLinks>

    <wpfcontrollib:LinkWindow.SettingLinks>
        <base:Link Source="/HeBianGu.Applications.ControlBase.LinkWindow;component/SettingControl.xaml" DisplayName="数据设置"  Logo="&#xe6af;"/>
    </wpfcontrollib:LinkWindow.SettingLinks>
</wpfcontrollib:LinkWindow>
