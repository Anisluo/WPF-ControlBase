<UserControl x:Class="HeBianGu.Applications.ControlBase.LinkWindow.View.Loyout.BrushControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeBianGu.Applications.ControlBase.LinkWindow.View.Loyout"
             xmlns:wpfcontrollib="clr-namespace:HeBianGu.General.WpfControlLib;assembly=HeBianGu.General.WpfControlLib"
             mc:Ignorable="d" 
             d:DesignHeight="1450" d:DesignWidth="1200">
    <ScrollViewer>
        <ScrollViewer.Resources>
            <Style TargetType="{x:Type wpfcontrollib:FButton}" BasedOn="{StaticResource S.FButton.Style.Default}">
                <Setter Property="Width" Value="250"/>
                <Setter Property="Margin" Value="5"/>
            </Style>
        </ScrollViewer.Resources>
        <StackPanel>
            <GroupBox Header="主题颜色">
                <UniformGrid Columns="4">
               
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Accent}" Content="S.Brush.Accent"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Accent.MouseOver}" Content="S.Brush.Accent.MouseOver"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Accent.Opacity.9}" Content="S.Brush.Accent.Opacity.9"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Accent.Opacity.8}" Content="S.Brush.Accent.Opacity.8"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Accent.Opacity.7}" Content="S.Brush.Accent.Opacity.7"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Accent.Opacity.6}" Content="S.Brush.Accent.Opacity.6"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Accent.Opacity.5}" Content="S.Brush.Accent.Opacity.5"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Accent.Opacity.4}" Content="S.Brush.Accent.Opacity.4"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Accent.Opacity.3}" Content="S.Brush.Accent.Opacity.3"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Accent.Opacity.2}" Content="S.Brush.Accent.Opacity.2"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Accent.Opacity.1}" Content="S.Brush.Accent.Opacity.1"/>  
                </UniformGrid>
            </GroupBox>

            <GroupBox Header="文本颜色">
                <UniformGrid Columns="4">
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.TextForeground.Tiltle}" Content="S.Brush.TextForeground.Tiltle"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.TextForeground.Default}" Content="S.Brush.TextForeground.Default"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.TextForeground.Assist}" Content="S.Brush.TextForeground.Assist"/>

                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.TextForeground.Link}" Content="S.Brush.TextForeground.Link"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.TextBackground.Default}" Content="S.Brush.TextBackground.Default" Foreground="{DynamicResource S.Brush.TextForeground.Tiltle}"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.TextBorderBrush.Default}" Content="S.Brush.TextBorderBrush.Default"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.RowIndex.BackGround}" Foreground="{DynamicResource S.Brush.TextForeground.Tiltle}" Content="S.Brush.RowIndex.BackGround"/> 
                </UniformGrid>
            </GroupBox>


            <GroupBox Header="标注颜色">
                <UniformGrid Columns="4">
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Red.Notice}" Content="S.Brush.Red.Notice"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Red.Notice.Opactiy.8}" Content="S.Brush.Red.Notice.Opactiy.8"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Red.Notice.Opactiy.6}" Content="S.Brush.Red.Notice.Opactiy.6"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Red.Notice.Opactiy.4}" Content="S.Brush.Red.Notice.Opactiy.4"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Red.Notice.Opactiy.2}" Content="S.Brush.Red.Notice.Opactiy.2"/>

                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Green.Notice}" Content="S.Brush.Green.Notice"/>

                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.LightGray.Notice}" Foreground="{DynamicResource S.Brush.TextForeground.Tiltle}" Content="S.Brush.LightGray.Notice"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.LightGray.NoticeOpacity.5}" Foreground="{DynamicResource S.Brush.TextForeground.Tiltle}" Content="S.Brush.LightGray.NoticeOpacity.5"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Gray.Notice}" Content="S.Brush.Gray.Notice" Foreground="{DynamicResource S.Brush.TextForeground.Tiltle}"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Gray.Notice.Opacity.5}" Content="S.Brush.Gray.Notice.Opacity.5" Foreground="{DynamicResource S.Brush.TextForeground.Tiltle}"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Orange.Notice}" Content="S.Brush.Orange.Notice"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Black.Notice}" Content="S.Brush.Black.Notice"/>


                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.White.Notice}" Foreground="{DynamicResource S.Brush.TextForeground.Tiltle}" Content="S.Brush.White.Notice"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.White.Opactiy.8}" Foreground="{DynamicResource S.Brush.TextForeground.Tiltle}" Content="S.Brush.White.Opactiy.8"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.White.Opactiy.6}" Foreground="{DynamicResource S.Brush.TextForeground.Tiltle}" Content="S.Brush.White.Opactiy.6"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.White.Opactiy.4}" Foreground="{DynamicResource S.Brush.TextForeground.Tiltle}" Content="S.Brush.White.Opactiy.4"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.White.Opactiy.2}" Foreground="{DynamicResource S.Brush.TextForeground.Tiltle}" Content="S.Brush.White.Opactiy.2"/>


                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Dark.10}" Content="S.Brush.Dark.10"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Dark.9}" Content="S.Brush.Dark.9"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Dark.8}" Content="S.Brush.Dark.8"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Dark.7}" Content="S.Brush.Dark.7"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Dark.6}" Content="S.Brush.Dark.6"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Dark.5}" Content="S.Brush.Dark.5"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Dark.4}" Content="S.Brush.Dark.4"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Dark.3}" Content="S.Brush.Dark.3"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Dark.5}" Content="S.Brush.Dark.2"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Dark.1}" Foreground="{DynamicResource S.Brush.TextForeground.Tiltle}" Content="S.Brush.Dark.1"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Dark.0}" Content="S.Brush.Dark.0"/>
                    
                </UniformGrid>
            </GroupBox>

            <GroupBox Header="其他颜色">
                <UniformGrid Columns="4">
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.WindowBackground}" Foreground="{DynamicResource S.Brush.TextForeground.Tiltle}" Content="S.Brush.WindowBackground"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Share.UnEnbled.Background}" Foreground="{DynamicResource S.Brush.TextForeground.Tiltle}" Content="S.Brush.Share.UnEnbled.Background"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.Share.UnEnbled.Foreground}" Foreground="{DynamicResource S.Brush.TextForeground.Tiltle}" Content="S.Brush.Share.UnEnbled.Foreground"/>
                    <wpfcontrollib:FButton Background="{DynamicResource S.Brush.RowIndex.BackGround}" Foreground="{DynamicResource S.Brush.TextForeground.Tiltle}" Content="S.Brush.RowIndex.BackGround"/>

                </UniformGrid>
            </GroupBox>
 

        </StackPanel>
    </ScrollViewer>
</UserControl>
