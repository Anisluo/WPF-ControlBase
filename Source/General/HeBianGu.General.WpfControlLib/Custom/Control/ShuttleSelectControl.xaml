<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:local="clr-namespace:HeBianGu.General.WpfControlLib"
                   xmlns:h="QQ:908293466">

    <Style x:Key="S.ListBoxItem.AllowDrop" TargetType="ListBoxItem" BasedOn="{StaticResource S.ListBoxItem.Default}">
        <Setter Property="AllowDrop" Value="True"/>
    </Style>

    <DataTemplate DataType="{x:Type local:ShuttleItem}">
        <Grid>
            <GroupBox Header="{Binding Header}">
                <ListBox ItemsSource="{Binding ItemSource}" AllowDrop="True">
                    <h:Interaction.Behaviors>
                        <h:ListDragBlendBehavior/>
                        <h:ListDropBlendBehavior/>
                    </h:Interaction.Behaviors>
                </ListBox>
            </GroupBox>
        </Grid>
    </DataTemplate>
    
    <!--  自定义输入框  -->
    <Style TargetType="{x:Type local:ShuttleSelectControl}">
        <Setter Property="Background" Value="{DynamicResource S.Brush.TextBackground.Default}" />
        <Setter Property="Foreground" Value="{DynamicResource S.Brush.TextForeground.Default}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ShuttleSelectControl}">
                    <Grid>
                        <ItemsControl ItemsSource="{TemplateBinding Source}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="2"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        
    </Style>
    <!--#endregion-->
</ResourceDictionary>
